<div class="mt-6 text-sm text-center space-y-2">
  <% if controller_name != 'sessions' %>
    <%= link_to "¿Ya tienes cuenta? Inicia sesión", new_session_path(resource_name), class: "text-blue-500 hover:text-blue-700 font-medium" %>
  <% end %>

  <% if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "¿No tienes cuenta? Regístrate", new_registration_path(resource_name), class: "text-blue-500 hover:text-blue-700 font-medium" %>
  <% end %>

  <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "¿Olvidaste tu contraseña?", new_password_path(resource_name), class: "text-blue-500 hover:text-blue-700 font-medium" %>
  <% end %>

  <% if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to "¿No recibiste el correo de confirmación?", new_confirmation_path(resource_name), class: "text-blue-500 hover:text-blue-700 font-medium" %>
  <% end %>

  <% if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to "¿No recibiste las instrucciones de desbloqueo?", new_unlock_path(resource_name), class: "text-blue-500 hover:text-blue-700 font-medium" %>
  <% end %>

  <% if devise_mapping.omniauthable? %>
    <div class="pt-4 space-y-2">
      <% resource_class.omniauth_providers.each do |provider| %>
        <%= button_to "Iniciar sesión con #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: "w-full bg-gray-100 hover:bg-gray-200 text-gray-800 font-semibold py-2 px-4 rounded focus:outline-none focus:ring-2 focus:ring-blue-500", data: { turbo: false } %>
      <% end %>
    </div>
  <% end %>
</div>
