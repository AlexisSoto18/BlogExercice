<div class="max-w-sm mx-auto">
  <div class="w-full max-w-xs">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4" }) do |f| %>

      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-4 text-center">
        <h2 class="text-2xl font-bold text-gray-800">¿Olvidaste tu contraseña?</h2>
        <p class="text-sm text-gray-500">Ingresa tu correo electrónico y te enviaremos instrucciones para restablecerla.</p>
      </div>

      <div class="mb-6">
        <%= f.label :email, class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "you@example.com", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>

      <div class="flex items-center justify-between">
        <%= f.submit "Enviar instrucciones", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
      </div>

    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
