<div class="flex flex-col space-y-4">
  <p>Escrito por: <%= @article.user.email %></p>
  <div class="max-w-sm rounded overflow-hidden shadow-lg">
    <div class="px-6 py-4">
      <div class="font-bold text-xl mb-2"><%= @article.title %></div>
      <div class="text-gray-700 text-base"><%= @article.content %></div>
    </div>
    <div>
      <p class="label">Tags</p>
      <% @article.categories.each do |category| %>
        <span class="bg-blue-500 text-white text-xs font-medium px-3 py-1 rounded-full" style="background-color:<%= category.color %>;">
          <%= link_to category.title, category, class:"text-white-700 text-base" %>
        </span>
        
      <% end %>
    </div>
    <div class="px-6 pt-4 pb-2">
      <%= button_to "Eliminar", article_path(@article), method: :delete%>
      <p>
      <%= link_to "Ver más artículos de este autor", articles_path(@article.user) %>
      </p>
    </div>
  </div>
</div>